<title>Waiter: {{username}}</title>
<form class="" action="" method="post">
  <title>shifts</title>
  <h3 name="username" class="waiter">{{username}}</h3>
  <hr>
  <table align="center" class="waiter-table">
    {{#days}}
      <th><input type="checkbox" name="day" value="Monday" {{Monday}}>Monday</th>
      <th><input type="checkbox" name="day" value="Tuesday" {{Tuesday}}>Tuesday</th>
      <th><input type="checkbox" name="day" value="Wednesday" {{Wednesday}}>Wednesday</th>
      <th><input type="checkbox" name="day" value="Thursday" {{Thursday}}>Thursday</th>
      <th><input type="checkbox" name="day" value="Friday" {{Friday}}>Friday</th>
      <th><input type="checkbox" name="day" value="Saturday" {{Saturday}}>Saturday</th>
      <th><input type="checkbox" name="day" value="Sunday" {{Sunday}}>Sunday</th>
    {{/days}}
  </table>
  <br>
  <input type="submit" name="submit" value="submit" class="submit-btn">
  <a href="/login" class="submit-btn">Logout</a>
  <br>
  <br>
  <table align="center" class="your-shifts-table">
    <h3><u>YOUR SHIFTS</u></h3>
    <tr>
      {{#shifts}}
        <td>{{this}}</td>
      {{/shifts}}
    </tr>
  </table>
</form>
